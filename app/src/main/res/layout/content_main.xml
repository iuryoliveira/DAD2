<?xml version="1.0" encoding="utf-8"?>
<!-- <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/formCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f2f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <!-- </android.support.constraint.ConstraintLayout> -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txtPotenciaStand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="85dp"
                android:ems="10"
                android:hint="Potência em StandBy"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/txtPotenciaUso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="147dp"
                android:ems="10"
                android:hint="Potência em Uso"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/txtVoltagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="211dp"
                android:ems="10"
                android:hint="Voltagem"
                android:inputType="numberSigned" />

            <Spinner
                android:id="@+id/spinnerRecurso"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="215dp" />

            <ImageView
                android:id="@+id/imgAparelho"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#a5afe2"
                app:srcCompat="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/btnImagem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/imgAparelho"
                android:layout_alignParentEnd="true"
                android:background="@drawable/layout_botao_foto" />

            <EditText
                android:id="@+id/txtDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPotenciaStand"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-85dp"
                android:ems="10"
                android:hint="Descrição"
                android:inputType="textPersonName" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>